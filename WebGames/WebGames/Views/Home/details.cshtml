@model WebGames.Models.Sanpham
@{
    ViewData["Title"] = "details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<Sanpham> list = ViewBag.lienquans;
}
<section class="anime-details spad">
    <div class="container">
        <div class="anime__details__content">
            <div class="row">
                <div class="col-lg-3">
                    <div class="anime__details__pic set-bg" data-setbg="@Model.Hinhanh">
                        <div class="comment"><i class="fa fa-comments"></i> 11</div>
                        <div class="view"><i class="fa fa-eye"></i> @Model.Solanclick</div>
                    </div>
                </div>
                <div class="col-lg-9">
                    <div class="anime__details__text">
                        <div class="anime__details__title">
                            <h3>@Model.Ten</h3>
                            @*<span>フェイト／ステイナイト, Feito／sutei naito</span>*@
                        </div>
                        <div class="anime__details__rating">
                            <div class="rating">
                                <a href="#"><i class="fa fa-star"></i></a>
                                <a href="#"><i class="fa fa-star"></i></a>
                                <a href="#"><i class="fa fa-star"></i></a>
                                <a href="#"><i class="fa fa-star"></i></a>
                                <a href="#"><i class="fa fa-star-half-o"></i></a>
                            </div>
                            <span>@Model.Solanclick Votes</span>
                        </div>
                        <p>
                            @Model.Noidung
                        </p>
                        <div class="anime__details__widget">
                            <div class="row">
                                <div class="col-lg-6 col-md-6">
                                    <ul>
                                        <li><span>Type:</span> TV Series</li>
                                        <li><span>Studios:</span> Lerche</li>
                                        <li><span>Date aired:</span> Oct 02, 2019 to ?</li>
                                        <li><span>Status:</span> Airing</li>
                                        <li><span>Genre:</span> Action, Adventure, Fantasy, Magic</li>
                                    </ul>
                                </div>
                                <div class="col-lg-6 col-md-6">
                                    <ul>
                                        <li><span>Scores:</span> 7.31 / 1,515</li>
                                        <li><span>Rating:</span> 8.5 / 161 times</li>
                                        <li><span>Duration:</span> 24 min/ep</li>
                                        <li><span>Quality:</span> HD</li>
                                        <li><span>Views:</span> 131,541</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <div>
                            <select>
                                <option>Trắng</option>
                                <option>Đen</option>
                                <option>Đỏ</option>
                            </select>
                        </div>
                        <div class="anime__details__btn">
                            <a asp-action="AddToCart" asp-controller="Home" asp-route-id="@Model.Id" class="follow-btn"><i class="fa fa-heart-o"></i> Add To Cart</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-8 col-md-8">
                <div class="anime__details__review">
                    <div class="section-title">
                        <h5>Cốt chuyện</h5>
                    </div>
                    <div class="anime__review__item">
                        <div class="anime__review__item__text">
                            <p>
                                @Model.Noidung
                            </p>
                        </div>
                    </div>
                </div>
                <div class="anime__details__form">
                    <div class="section-title">
                        <h5>Your Comment</h5>
                    </div>
                    <form action="#">
                        <textarea placeholder="Your Comment"></textarea>
                        <button type="submit"><i class="fa fa-location-arrow"></i> Review</button>
                    </form>
                </div>
            </div>
            <div class="col-lg-4 col-md-4">
                <div class="anime__details__sidebar">
                    <div class="section-title">
                        <h5>Sản phẩm liên quan</h5>
                    </div>
                    @foreach(var item in list)
                    {
                        <div class="product__sidebar__view__item set-bg" data-setbg="@item.Hinhanh">
                            <div class="ep">18 / ?</div>
                            <div class="view"><i class="fa fa-eye"></i> @item.Solanclick</div>
                            <h5><a href="#">@item.Ten</a></h5>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</section>
