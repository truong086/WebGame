@model List<WebGames.Models.Sanpham>

@{
    ViewData["Title"] = "loaigame";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var theloais = ViewBag.theloai;
}

<div style="width: 100vw; height: auto; margin: 50px 0; padding: 0 50px">
    <div style="width: 100%; height: auto; text-align: left;">
        <h3 style="margin: 60px 50px; color: white; font-weight: bold">@theloais.Ten</h3>
        <div style="display: flex; justify-content: space-around; flex-wrap: wrap">
            @foreach(var item in Model)
            {
                <div style="width: 350px">
                    <div>
                        <img style="width: 300px" src="@item.Hinhanh" />
                    </div>
                    <div>
                        <a style="margin: 10px 0; display: block; font-weight: bold; font-size: 15px" asp-action="details" asp-controller="Home" asp-route-id="@item.Id">@item.Ten</a>
                    </div>
                    <div>
                        <p>@item.Noidung</p>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

